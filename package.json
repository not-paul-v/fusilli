{
  "name": "kochbuch",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "check": "oxlint",
    "dev": "alchemy dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @kochbuch/db db:push",
    "db:generate": "turbo -F @kochbuch/db db:generate",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "oxlint": "^1.12.0",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11",
    "alchemy": "^0.70.0",
    "@cloudflare/workers-types": "^4.20250822.0"
  },
  "packageManager": "bun@1.2.23"
}
